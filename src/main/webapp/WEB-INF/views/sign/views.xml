<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition extends="default" name="/sign">
        <!--Path to target jsp-->
        <put-attribute name="body" value="/WEB-INF/views/sign/sign.jspx"/>

        <!--List of css files-->
        <put-list-attribute name="styles" inherit="true">
            <add-attribute value="/css/views/sign.css" type="template"/>
        </put-list-attribute>
        <!--List of js files-->
        <put-list-attribute name="js" inherit="true">

        </put-list-attribute>
    </definition>

    <definition extends="default" name="/sign_json">
        <put-attribute name="body" value="/WEB-INF/views/sign/sign-json.jspx"/>
    </definition>
</tiles-definitions>