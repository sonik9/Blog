<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition extends="default" name="post/create">
        <!--Path to target jsp-->
        <put-attribute name="body" value="/WEB-INF/views/post/post-creating.jsp"/>

        <!--List of css files-->
        <put-list-attribute name="styles" inherit="true">

        </put-list-attribute >
        <!--List of js files-->
        <put-list-attribute name="js" inherit="true">
            <add-attribute value="/resources/js/jquery/jquery-ui.min.js"/>
            <add-attribute value="/resources/js/jquery/chosen.jquery.min.js"/>
            <add-attribute value="/resources/js/bootstrap/bootstrap-multiselect.js"/>
            <add-attribute value="http://cdn.tinymce.com/4/tinymce.min.js"/>
        </put-list-attribute>
    </definition>

    <definition extends="default" name="post/view">
        <put-attribute name="body" value="/WEB-INF/views/post/post.jsp"/>
        <!--List of css files-->
        <put-list-attribute name="styles" inherit="true">
            <add-attribute value="/css/views/post.css"/>
        </put-list-attribute>
        <!--List of js files-->
        <put-list-attribute name="js" inherit="true">
            <add-attribute value="/resources/js/views/post.js"/>
        </put-list-attribute>
    </definition>
</tiles-definitions>