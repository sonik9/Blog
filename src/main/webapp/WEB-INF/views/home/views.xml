<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition extends="default" name="homePage">
        <!--Path to target jsp-->
        <put-attribute name="body" value="/WEB-INF/views/home/home.jsp"/>

        <!--List of css files-->
        <put-list-attribute name="css" inherit="true">
            <add-attribute value="/resources/css/views/home.css"/>
        </put-list-attribute>
        <!--List of js files-->
        <put-list-attribute name="js" inherit="true">
            <add-attribute value="/resources/js/views/home.js"/>
        </put-list-attribute>
    </definition>
</tiles-definitions>