<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition extends="default" name="homePage">
        <!--Path to target jsp-->
        <put-attribute name="body" value="/WEB-INF/views/home/home.jspx"/>

        <!--List of css files-->
        <put-list-attribute name="styles" inherit="true">

        </put-list-attribute>
        <!--List of js files-->
        <put-list-attribute name="js" inherit="true">

        </put-list-attribute>
    </definition>

    <definition extends="default" name="userPage">
        <put-attribute name="body" value="/WEB-INF/frontend/views/home/user.jspx"/>
        <put-list-attribute name="styles">
            <add-attribute value="/css/test2.css" type="template"/>
        </put-list-attribute>
    </definition>
</tiles-definitions>