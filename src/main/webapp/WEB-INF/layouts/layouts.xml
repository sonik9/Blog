<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="default" template="/WEB-INF/layouts/default.jsp">

        <put-attribute name="header" value="/WEB-INF/views/header.jspx"/>
        <put-attribute name="footer" value="/WEB-INF/views/footer.jspx"/>

        <!--List of css files-->
        <put-list-attribute name="styles">
            <add-attribute value="/css/main.css" />
        </put-list-attribute>

        <!--List of js files-->
        <put-list-attribute name="js">
            <add-attribute value="/resources/js/jquery/jquery-1.11.3.min.js"/>
            <add-attribute value="/resources/js/jquery/jquery-ui.min.js"/>
            <add-attribute value="/resources/js/bootstrap/bootstrap.min.js"/>
            <add-attribute value="/resources/js/bootstrap/bootstrap-notify.js"/>
            <add-attribute value="/resources/js/main.js"/>
        </put-list-attribute>

    </definition>


    <definition name="frame" template="/WEB-INF/layouts/frame.jsp">
    </definition>

</tiles-definitions>